<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/library/Bootstrap/bootstrap.min.css" rel="stylesheet" />
    @RenderSection("Css", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand font-weight-bold" href="@Url.Action("Index","Products")">E-Market</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">

                <li class="nav-item active">
                    <a class="nav-link btn btn-primary text-light mx-3" href="@Url.Action("Index","Products")">Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-info text-light" href="@Url.Action("Create" , "Products")">Add New Product</a>
                    
                </li>


            </ul>
            
                <a class="mr-2 btn btn-primary" href="@Url.Action("index","Carts")">Cart</a>
          
        </div>
    </nav>




    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/library/Jquery/jquery-3.4.1.slim.min.js"></script>
    <script src="~/library/Bootstrap/popper.min.js"></script>
    <script src="~/library/Bootstrap/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
